<div class="main">
<%= link_to 'Создать Лигу', new_admin_league_path, :class => "btn btn-primary btn-create" %>
	<div class="box">
		<div class="box-body no-padding">
			<table class="table table-condensed">
				<tbody>
					<tr>
						<th>Лига</th>
						<th>Город</th>
						<th></th>
					</tr>
				</tbody>
				<tbody>
					<% @leagues.each do |league| %>
						<tr>
							<td><%= league.name %></td>
							<td><%= league.city %></td>
							<td>
								<%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_league_path(league), :class => "mybtn btn_show" %>
								<%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_league_path(league), :class => "mybtn btn_edit" %>
								<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_league_path(league), :class => "mybtn btn_delete", method: :delete, data: { confirm: 'Вы уверены?' }  %>
								</td>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>	
		</div>
	</div>
</div>
