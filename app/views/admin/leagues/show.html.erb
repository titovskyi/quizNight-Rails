<div class="main">
	<div class="box">
		<div class="box-body table-responsive">
			<table class="table">
					<tbody>
						<tr>
							<th>Лига</th>
							<td><%= @league.name %></td>
						</tr>
						<tr>
							<th>Город</th>
							<td><%= @league.city %></td>
						</tr>
					</tbody>
			</table>
		</div>
	</div>
	<%= link_to 'Создать Сезон', new_admin_league_season_path(@league), :class => "btn btn-primary btn-create" %>
	<div class="box">
		<div class="boc-body table-responsive">
			<table class="table">
				<tbody>
					<tr>
						<th>Лига</th>
						<th>Город</th>
						<th>Сезон</th>
						<th></th>
					</tr>
				</tbody>
				<tbody>
					<% @seasons.each do |season| %>
						<tr>
							<td><%= season.league.name %></td>
							<td><%= season.league.city %></td>
							<td><%= season.name %></td>
							<td>
								<%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_season_path(season), :class => "mybtn btn_show" %>
								<%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_league_season_path(season, @league), :class => "mybtn btn_edit" %>
								<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_league_season_path(season), :class => "mybtn btn_delete", method: :delete, data: { confirm: 'Вы уверены?' }  %>
								</td>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
