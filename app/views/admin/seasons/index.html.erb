<div class="main">
	<div class="season_navbar">
<!-- 		<div class="create_season">
			<%= link_to 'Создать Сезон', new_season_path, :class => "btn btn-primary btn-create" %>
		</div> -->
		<div class="league_filter">
		<%= form_tag seasons_path, :method => 'get' do %>
			<label for="league_id">Лига</label>
			<%= collection_select :season, :league_id, League.all, :id, :name, prompt: "Все лиги" %>
			<%= submit_tag "Look" %>
		<% end %>
		</div>
	</div>

	<div class="box">
		<div class="box-body no-padding">
			<table class="table table-condensed">
				<tbody>
					<tr>
						<th>Лига</th>
						<th>Сезон</th>
						<th></th>
					</tr>
				</tbody>
				<tbody>
					<% @seasons.each do |season| %>
						<tr>
							<td><%= season.league_id %></td>
							<td><%= season.name %></td>
							<td>
								<%= link_to '<i class="fas fa-eye"></i>'.html_safe, season_path(season), :class => "mybtn btn_show" %>
								<%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_season_path(season), :class => "mybtn btn_edit" %>
								<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, season_path(season), :class => "mybtn btn_delete", method: :delete, data: { confirm: 'Вы уверены?' }  %>
								</td>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>	
		</div>
	</div>
</div>