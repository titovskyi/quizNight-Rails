<div class="main">
	<div class="box">
		<div class="box-body table-responsive">
			<table class="table">
				<tbody>
					<tbody>
						<tr>
							<th>Сезон</th>
							<td><%= @season.name %></td>
						</tr>
						<tr>
							<th>Лига</th>
							<td><%= @season.league.name %></td>
						</tr>
					</tbody>
				</tbody>
			</table>
		</div>
	</div>
	<%= link_to 'Создать Игру', new_admin_league_season_game_path(@league, @season), :class => "btn btn-primary btn-create" %>
	<div class="box">
		<div class="boc-body table-responsive">
			<table class="table">
				<tbody>
					<tr>
						<th>Сезон</th>
						<th>Город</th>
						<th>Игра</th>
						<th>Заведение</th>
						<th></th>
					</tr>
				</tbody>
				<tbody>
					<% @games.each do |game| %>
						<tr>
							<td><%= game.season.name %></td>
							<td><%= game.league.city %></td>
							<td><%= game.game %></td>
							<td><%= game.location %></td>
							<td>
								<%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_game_path(game), :class => "mybtn btn_show" %>
								<%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_game_path(game), :class => "mybtn btn_edit" %>
								<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_league_season_game_path(game, @season), :class => "mybtn btn_delete", method: :delete, data: { confirm: 'Вы уверены?' }  %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
