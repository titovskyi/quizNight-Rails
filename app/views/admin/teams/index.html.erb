<div class="main">
	<div class="season_navbar">
		<div class="create_season">
			<%= link_to 'Создать Команду', new_admin_team_path, :class => "btn btn-primary btn-create" %>
		</div>
	</div>
	<div class="box">
		<div class="box-body no-padding">
			<table class="table table-condensed">
				<tbody>
					<tr>
						<th>Название команды</th>
						<th>Капитан</th>
						<th>Email</th>
						<th>Телефон</th>
						<th>№ Лиги</th>
						<th></th>
					</tr>
				</tbody>
				<tbody>
					<% @teams.each do |team| %>
						<tr>
							<td><%= team.name %></td>
							<td><%= team.captain %></td>
							<td><%= team.email %></td>
							<td><%= team.phone %></td>
							<td><%= team.league.name %></td>
							<td>
								<%= link_to '<i class="fas fa-eye"></i>'.html_safe, admin_team_path(team), :class => "mybtn btn_show" %>
								<%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_team_path(team), :class => "mybtn btn_edit" %>
								<%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, admin_team_path(team), :class => "mybtn btn_delete", method: :delete, data: { confirm: 'Вы уверены?' }  %>
								</td>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>	
		</div>
	</div>
</div>