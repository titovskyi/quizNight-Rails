<!DOCTYPE html>
<html>
  <head>
    <title>QuizNightV1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="skin-blue layout-top-nav">
  <header class="main-header">
    <nav class="navbar navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <p><%= link_to '<span>QUIZ</span>NIGHT'.html_safe, root_path %></p>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Logout', destroy_admin_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
	  <div class="sidebar">
	  	<aside class="main-sidebar">
		  <section class="sidebar">
		    <ul class="sidebar-menu" data-widget="tree">
		      <li class="header"></li>
		      <li class="active"><%= link_to '<i class="fa fa-link"></i> <span>Games</span>'.html_safe, root_path %></li>
          <li class="active"><%= link_to '<i class="fa fa-link"></i> <span>Leagues & Seasons</span>'.html_safe, admin_leagues_path %></li>
          <li class="active"><%= link_to '<i class="fa fa-link"></i> <span>Teams</span>'.html_safe, admin_teams_path %></li>
          <li class="active"><%= link_to '<i class="fa fa-link"></i> <span>Game Teams</span>'.html_safe,admin_game_teams_path %></li>
		    </ul>
		  </section>
		</aside>
	    <%= yield %>
	  </div>
  </body>
</html>
